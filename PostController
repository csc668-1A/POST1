    public String getCustomerName(){
        return customerTextField.getText();
    }
    
    public int getQuantity(){
        return Integer.parseInt(quantityTextField.getText());
    }
    
    public int getUPCCode(){
        return Integer.parseInt(upcTextField.getText());
    }
    
    public int getPaymentAmount(){
        return Integer.parseInt(paymentTextField.getText());
    }
    
    public void setTotalValue(int totalValue){
        totalTextField.setText(Integer.toString(totalValue));
    }
    
    //Invokes method when enter button clicked for getting customer name, upc code, and quantity
    void addCustomerNameListener(ActionListener listenForCustomerButton){
        jButton1.addActionListener(listenForCustomerButton);
    }
    
    void displayErrorMessage(String errorMessage){
	        JOptionPane.showMessageDialog(this, errorMessage);
	    }
    
    void displayPaymentAccepted(String errorMessage){
	        JOptionPane.showMessageDialog(this, errorMessage);
	    }

